generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        Int      @id @default(autoincrement()) // idは内部でしか使わないのでautoincrementにしておく。
  name      String  @unique // nameはparamで使うのでuniqueにしておく。
  email     String  @unique // 同じemailで登録できないようにする。
  hashedPassword String
  notes     Note[]
  tags      Tag[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Note {
  id       String  @id @default(uuid())
  title    String
  content  String  @db.Text
  author   User?   @relation(fields: [authorId], references: [id])
  authorId Int?
  tags     NoteTag[] 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tag {
  id       String  @id @default(uuid())
  name     String
  author   User?   @relation(fields: [authorId], references: [id])
  authorId Int?
  notes    NoteTag[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NoteTag {
  noteId String
  tagId  String
  note   Note @relation(fields: [noteId], references: [id], onDelete: Cascade) // onDelete: Cascade でnoteが削除されたらNoteTagも削除されるようにする。
  tag    Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade) // onDelete: Cascade でtagが削除されたらNoteTagも削除されるようにする。

  @@id([noteId, tagId])
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.MediumText
  expiresAt   DateTime
}

